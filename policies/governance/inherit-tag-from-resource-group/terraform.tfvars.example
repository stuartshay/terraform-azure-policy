# Example Terraform Variables for inherit-tag-from-resource-group policy
# Copy this file to terraform.tfvars and update with your values

# Management Group ID (optional)
# management_group_id = "my-management-group"

# Whether to create a policy assignment
create_assignment = true

# Assignment scope (Resource Group ID)
# assignment_scope_id = "/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/my-resource-group"

# Policy assignment configuration
policy_assignment_name         = "inherit-tags-assignment"
policy_assignment_display_name = "Inherit Tags from Resource Group Assignment"
policy_assignment_description  = "This assignment automatically inherits tags from resource groups to child resources."

# Assignment location (required for system-assigned identity with modify effect)
assignment_location = "East US"

# Tag configuration
# Specify which tag to inherit from the resource group
tag_name = "Environment"

# Environment metadata
environment = "sandbox"
owner       = "Policy-Team"

# Note: This policy uses the "modify" effect and requires the Contributor role
# The system-assigned managed identity will be granted the necessary permissions automatically
