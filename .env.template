# terraform-azure-modules Project - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# WARNING: Never commit the .env file to version control!

# =============================================================================
# Terraform Cloud Configuration
# =============================================================================

# Your Terraform Cloud API Token (get from: https://app.terraform.io/app/settings/tokens)
TF_API_TOKEN=your_terraform_cloud_api_token_here

# Terraform CLI configuration file (project-specific)
TF_CLI_CONFIG_FILE=/home/vagrant/git/azure-policy/.terraform.d/credentials.tfrc.json

# Terraform Cloud Organization Name
TF_CLOUD_ORGANIZATION=azure-policy-cloud

# =============================================================================
# Azure Configuration
# =============================================================================

# Azure Service Principal for Terraform Cloud
# Create via: az ad sp create-for-rbac --name "terraform-azure-policy" --role="Contributor"
ARM_CLIENT_ID=your_azure_client_id_here
ARM_CLIENT_SECRET=your_azure_client_secret_here # pragma: allowlist secret
ARM_SUBSCRIPTION_ID=your_azure_subscription_id_here
ARM_TENANT_ID=your_azure_tenant_id_here

# =============================================================================
# GitHub Configuration (for GitHub Actions integration)
# =============================================================================

# GitHub token for Terraform (GitHub Runner deployment)
TF_VAR_github_token=your_github_personal_access_token_here

# =============================================================================
# Project Configuration
# =============================================================================

# Environment (dev, staging, prod) - Using terraform.tfvars instead
# TF_VAR_environment=dev

# Azure region - Using terraform.tfvars instead
# TF_VAR_location="East US"

# Azure subscription - Using terraform.tfvars instead
# TF_VAR_subscription_id=your_azure_subscription_id_here

# Project owner - Using terraform.tfvars instead
# TF_VAR_owner=platform-team

# Cost center for billing - Using terraform.tfvars instead
# TF_VAR_cost_center=development

# =============================================================================
# Optional: Local Development Overrides
# =============================================================================

# Uncomment and modify these for local development if needed
# TF_VAR_enable_network_watcher=false
# TF_VAR_enable_flow_logs=false
# TF_VAR_enable_policy_assignments=false
